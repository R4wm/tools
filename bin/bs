#!/bin/bash

# Check if argument is supplied
if [ -z "$1" ]; then
  echo "Usage: $0 <query-string...>"
  exit 1
fi

# Join all arguments into a single string and URL-encode it
query=$(python3 -c "import urllib.parse, sys; print(urllib.parse.quote(' '.join(sys.argv[1:])))" "$@")

# Construct the URL
url="https://web.prsmusa.com/bible/search?q=${query}&json=true"

echo "$url"

curl -s "$url" | jq .
